<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="SingleChoose">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="item_textColor">#666666</item>
        <item name="item_backgroundColor">#ffffff</item>
        <item name="item_selectedTextColor">#ffffff</item>
        <item name="item_selectedBackgroundColor">#7289ff</item>
        <item name="item_radius">0dp</item>
        <item name="item_strokeColor">#939393</item>
        <item name="item_selectedStrokeColor">#939393</item>
        <item name="item_strokeWidth">1px</item>
        <item name="item_horizontalSpacing">10dp</item>
        <!--这里设置固定大小,padding为0-->
        <item name="item_horizontalPadding">10dp</item>
        <item name="item_verticalPadding">5dp</item>
        <!--单位dp-->
        <item name="item_width">80</item>
        <item name="item_height">wrap_content</item>
        <!--限制tag显示长度,规则查看Textview-->
        <item name="item_maxEms">5</item>
        <!--单选-->
        <item name="item_multiChooseable">false</item>
        <item name="item_click">false</item>
    </style>

    <style name="FlowLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="item_textColor">@color/myblack</item>
        <item name="item_textSize">16sp</item>
        <item name="item_backgroundColor">@color/gray_radio_bg</item>
        <item name="item_selectedTextColor">@color/mywhite</item>
        <item name="item_selectedBackgroundColor">@color/colorPrimary</item>
        <item name="item_radius">4dp</item>
        <item name="item_strokeWidth">0px</item>
        <item name="item_horizontalSpacing">10dp</item>
        <!--这里设置固定大小,padding为0-->
        <item name="item_horizontalPadding">10dp</item>
        <item name="item_verticalPadding">5dp</item>
        <!--单位dp-->
        <item name="item_width">wrap_content</item>
        <item name="item_height">wrap_content</item>
        <!--限制tag显示长度,规则查看Textview-->
        <item name="item_maxEms">5</item>
        <!--多选-->
        <item name="item_multiChooseable">true</item>
    </style>

    <style name="FlowLayout_Story">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="item_textColor">@color/myblack</item>
        <item name="item_textSize">16sp</item>
        <item name="item_backgroundColor">@color/gray_radio_bg_story</item>
        <item name="item_selectedTextColor">@color/mywhite</item>
        <item name="item_selectedBackgroundColor">@color/colorPrimary</item>
        <item name="item_radius">4dp</item>
        <item name="item_strokeWidth">0px</item>
        <item name="item_horizontalSpacing">10dp</item>
        <!--这里设置固定大小,padding为0-->
